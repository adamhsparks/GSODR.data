year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{GSODRdata}: Extra Climate Data for the GSODR Package",
         author = c(person("Adam", "Sparks"),
                    person("Tomislav", "Hengl"),
                    person("Andrew", "Nelson")),
         year = year,
         note = note,
         url = "https://adamhsparks.github.io/GSODRdata/index.html")
